color normal            color231      default
color tree              color9        default
color error             color196      default
color message           color9        default
color prompt            color231      default

# color all ML mails
color index             color132      color15 "~u"

# uncolor certain messages
uncolor index "~P"          # mail addressed to me
uncolor index "~C @.com"    # mails addressed  to: or cc: EXPR
uncolor index "~N ~u"       # new ML mail
uncolor index "~N !~u"      # new non-ML mail
uncolor index "~T"          # tagged mails
uncolor index "~D"          # (tagged) deleted mail

# and recolor them appropriately
color index             color101       default "~P"        # mail adressed to me
color index             color231       default "~C @.com"  # mail addressed to: or cc: EXPR
color index             color196       default "~N ~u"     # new ML mail
color index             color3         default "~N !~u"    # new non-ML mail
color index             color33        default "~T"        # tagged mail
color index             color203       default "~D"        # deleted mail

color header            color205       default "^from:"
color header            color9         default "^to:"
color header            color36        default "^cc:"
color header            color231       default "^date:"
color header            color15        default "^subject:"

color attachment        color7         default
color search            color101       default
color signature         color7         default
color tilde             color7         default
color hdrdefault        color9         default
color bold              color101       default

color body              color7         default "(^|<| )mailto:[^ ]+@[^ ]( |>|$)"
color body              color7         default "(^|<| )(http|https|ftp|file|telnet|news|finger)://[^ ]+( |>|$)"

color body              color132       default "(^| )+(|[<>|])[8;:](|[^ ])[)(/|DOPS]( |$)+"
color body              color132       default "(^| )+[)(/|DOPS](|[^ ])[8;:](|[<>|])( |$)+"

color body              color101       default "(^| )\\*[^ ]+\\*( |$)"
color body              color101       default "(^| )_[^ ]+_( |$)"
color body              color101       default "(^| )/[^ ]+/( |$)"

color quoted            color132       default
color quoted1           color66        default
color quoted2           color9         default
color quoted3           color101       default
color quoted4           color9         default
color quoted5           color64        default
color quoted6           color100       default
color quoted7           color68        default

